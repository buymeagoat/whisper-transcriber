# Core application configuration
PORT=8000
VITE_API_HOST=http://localhost:8000

# ==========================================
# File Upload Security Configuration
# ==========================================

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Maximum filename length (default: 255)
MAX_FILENAME_LENGTH=255

# Upload timeout in seconds (default: 300 = 5 minutes)
UPLOAD_TIMEOUT=300

# ==========================================
# CORS Configuration
# ==========================================

# Environment: development, staging, production
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
# For production, specify exact domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# For development, leave empty to use defaults (localhost)
ALLOWED_ORIGINS=

# ==========================================
# Application Configuration  
# ==========================================

JOB_QUEUE_BACKEND=thread
STORAGE_BACKEND=local
LOCAL_STORAGE_DIR=uploads
MODEL_DIR=models

# ==========================================
# Logging & Monitoring Configuration
# ==========================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: standard (development) or json (production/monitoring)
LOG_FORMAT=standard

# Legacy settings (kept for compatibility)
LOG_TO_STDOUT=false

# ==========================================
# Authentication Configuration
# ==========================================

# SECRET_KEY is used to sign JWTs - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_in_production_use_secrets_token_hex_32

# Allow new user registration (true/false)
ALLOW_REGISTRATION=true

# JWT token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Advanced Settings (Optional)
# ==========================================

# Advanced settings
MAX_CONCURRENT_JOBS=2
CLEANUP_ENABLED=true
CLEANUP_DAYS=30
CLEANUP_INTERVAL_SECONDS=86400
TIMEZONE=UTC
WHISPER_LANGUAGE=en
WHISPER_TIMEOUT_SECONDS=0
