# Example local development environment variables
# Copy to `.env` and customize for your workstation. Never commit secrets from actual deployments.

# Core application secrets (replace with secure random values)
SECRET_KEY=dev-secret-key-change-me
JWT_SECRET_KEY=dev-jwt-secret-change-me
REDIS_PASSWORD=dev-redis-password
ADMIN_BOOTSTRAP_PASSWORD=dev-admin-password
ADMIN_METRICS_TOKEN=dev-metrics-token

# Database configuration (defaults to bundled SQLite database)
DATABASE_URL=sqlite:////app/data/whisper.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=whisper_transcriber
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_SSLMODE=prefer
POSTGRES_OPTIONS=

# Redis / Celery
REDIS_URL=redis://:dev-redis-password@redis:6379/0
CELERY_BROKER_URL=redis://:dev-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:dev-redis-password@redis:6379/0

# Runtime configuration
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO
ENVIRONMENT=development
WHISPER_MODEL_DIR=/app/models
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
