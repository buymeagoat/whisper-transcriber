# Copy this file to environments/<env>.tfvars and adjust values to your needs.
project                = "whisper-transcriber"
environment            = "dev"
aws_region             = "us-east-1"
allowed_cidr_blocks    = ["203.0.113.0/24"]
db_username            = "transcriber"
db_password            = "change-me"
db_name                = "whisper_transcriber_dev"
release_image_tag      = "main-2025-11-08"
rollback_image_tag     = "main-2025-11-01"
ecs_execution_role_arn = "arn:aws:iam::123456789012:role/whisper-transcriber-execution"
ecs_task_role_arn      = "arn:aws:iam::123456789012:role/whisper-transcriber-task"
secret_key_parameter_arn             = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/SECRET_KEY"
jwt_secret_key_parameter_arn         = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/JWT_SECRET_KEY"
admin_bootstrap_password_parameter_arn = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/ADMIN_BOOTSTRAP_PASSWORD"
redis_url_parameter_arn              = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/REDIS_URL"
redis_password_parameter_arn         = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/REDIS_PASSWORD"
metrics_token_parameter_arn          = "arn:aws:ssm:us-east-1:123456789012:parameter/whisper/prod/METRICS_TOKEN"
worker_desired_count                 = 2
worker_task_cpu                      = 1024
worker_task_memory                   = 2048
